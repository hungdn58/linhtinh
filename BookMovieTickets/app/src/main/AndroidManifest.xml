<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hoang.bookmovietickets" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MovieDetails"
            android:label="@string/title_activity_movie_details"
            android:parentActivityName=".Activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Activity.BookTicketsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppDialog" >
        </activity>
        <activity
            android:name=".Activity.MyListTicketsActivity"
            android:label="@string/title_activity_my_list_tickets"
            android:parentActivityName=".Activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Activity.LoginForm"
            android:label="@string/title_activity_login_form"
            android:parentActivityName=".Activity.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activity.RegisterForm"
            android:label="@string/title_activity_register_form"
            android:parentActivityName=".Activity.LoginForm"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activity.HistoryActivity"
            android:label="@string/title_activity_history"
            android:parentActivityName=".Activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Activity.UserProfile"
            android:screenOrientation="portrait"
            android:parentActivityName=".Activity.MainActivity"
            android:label="@string/title_activity_user_profile" >
        </activity>

    </application>

</manifest>
